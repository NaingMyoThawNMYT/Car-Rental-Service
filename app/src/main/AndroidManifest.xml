<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yadanar.carrentalservice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.CarEditorActivity" />
        <activity android:name=".activity.CarTypeListActivity" />
        <activity
            android:name=".activity.DashboardActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.AdminActivity" />
        <activity android:name=".activity.BookingActivity" />
        <activity android:name=".activity.CarDetailActivity" />
        <activity
            android:name=".activity.CustomerActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>